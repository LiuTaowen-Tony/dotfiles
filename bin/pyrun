#!/bin/bash

if [ $# -lt 1 ]; then
  echo "usage: pyrun <dir-to-script> <...command line arguments>"
  exit 1
fi

INPUT=$(echo $1 | tr '/' '.')
# remove .py suffix if present
INPUT=${INPUT/%.py}
# remove . or .. prefix if present
INPUT=${INPUT/#./}
INPUT=${INPUT/#./}

shift

command python3 -m $INPUT $@

