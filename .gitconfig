[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[user]
	name = LiuTaowen Tony
	email = tony_t_liu@outlook.com
[core]
	autocrlf = input
[alias]
     cl = !${HOME}/bin/git_clone
     co = checkout
     br = branch
     sw = switch
     mrg = merge
     st = status -s
     ad = add
     psh = push
     se = !git rev-list --all | xargs git grep -F
     cm = commit -m
     acm = !git add . && git commit -m
     diffs = diff --staged
     lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
     lg1b = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
     lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	ll = log --oneline
	last = log -1 HEAD --stat
	rv = remote -v
[help]
	autocorrect = 20
